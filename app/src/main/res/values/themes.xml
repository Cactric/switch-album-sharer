<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SwAlSh" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorOnPrimary">@color/light_colour_on_primary</item>
        <item name="backgroundColor">@color/light_bg_colour</item>

        <item name="buttonBarButtonStyle">@color/light_primary</item>
    </style>

    <style name="Base.Theme.SwAlSh.major_text_view" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">start|top</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/material_dynamic_neutral_variant0</item>
    </style>
    <style name="Base.Theme.SwAlSh.minor_text_view" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/material_dynamic_neutral20</item>
        <item name="android:gravity">start|bottom</item>
    </style>

    <style name="Theme.SwAlSh" parent="Base.Theme.SwAlSh" />
</resources>